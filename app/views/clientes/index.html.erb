<h1>Listing clientes</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Nome abrev</th>
    <th>Endereco</th>
    <th>Telefone1</th>
    <th>Telefone2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.nome %></td>
    <td><%= cliente.nome_abrev %></td>
    <td><%= cliente.endereco %></td>
    <td><%= cliente.telefone1 %></td>
    <td><%= cliente.telefone2 %></td>
    <td><%= link_to 'Show', cliente %></td>
    <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
    <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

